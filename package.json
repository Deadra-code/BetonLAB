    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@react-pdf/renderer": "^3.4.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.1.5",
    "file-saver": "^2.0.5",
    "html-to-image": "^1.11.11",
    "immer": "^10.1.1",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "lucide-react": "^0.309.0",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-joyride": "^2.9.3",
    "react-window": "^1.8.10",
    "recharts": "^2.12.7",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zundo": "^2.3.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "vite": "^5.3.1",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "postinstall": "electron-rebuild -f -w sqlite3",
    "dev": "vite",
    "build": "vite build && copyfiles -u 1 public/* build && copyfiles -u 1 src/electron/**/* build/electron",
    "preview": "vite preview",
    "electron-start": "electron .",
    "electron:dev": "concurrently -k \"npm:dev\" \"wait-on http://localhost:3000 && electron .\""
  },
  "build": {
    "appId": "com.contoh.kalkulatorbeton",
    "productName": "Kalkulator Beton SNI",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/favicon.ico"
    }
  }
}
